
<%= partial :group_header %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Accepted by</th>
      <th>Added to Facebook group?</th>
      <!--
     <th>Paid</th>     
     <th>Teams</th>
     <th>Shifts</th>
      -->
    </tr>
  </thead>
  <% @group.memberships.each { |membership| account = membership.account %>
    <tr>
      <td>
        <img title="<%=account.name%>" src="<%=account.picture ? account.picture.url : '/images/silhouette.png'%>" style="width: 100px; display: block"/>
        <%= account.name %>
      </td>  
      <td>
        <%= membership.mapplication ? "#{membership.mapplication.processed_by.name} with #{pluralize(membership.mapplication.mapplication_votes.count,'supporter')}" : 'n/a' %>
      </td>  
      <td>
        <% if membership.added_to_facebook_group  %>
          <i class="fa fa-check"></i>
        <% else %>
          <a href="/memberships/<%=membership.id%>/added_to_facebook_group">Click if added</a>
        <% end %>
      </td>              
      <!--
      <td>
      <% if membership.paid %>
            Â£<%= membership.paid %>
      <% else %>
        <% form_tag "/memberships/#{membership.id}/paid" do %>
          <%= number_field_tag :paid, :class => 'form-control' %>
        <% end %>
      <% end %>
      </td>        
      <td>
      <% membership.teamships.each { |teamship| %>
                      <span class="label label-primary"><%=teamship.team.name%></span>
      <% } %></td>
      <td>
      <%=pluralize(membership.shifts.count,'shift')%>
      </td>
      -->
    </tr>
  <% } %>
</table>