
<%= partial :group_header %>

<div id="quicklinks">
  <div style="margin: 10px 0; font-size: 20px"><i class="fa fa-spin fa-spinner"></i></div>
</div>
<script>
$(function() {
  $('#quicklinks').load('/h/<%=@group.slug%>/quicklinks')
})
</script>


<div>

  <% form_tag '', :style => 'display:inline', :method => 'get' do %>
    <%= text_field_tag :q, :class => 'form-control', :style => 'width: auto; display: inline-block', :placeholder => 'Search members', :value => params[:q] %>
    &middot;

    <style>
      .views a { opacity: 0.5 }
      .views a.active { opacity: 1 }      
    </style>
    <div class="views" style="display: inline">
      <a href="?" <% if !params[:view] %>class="active"<% end %>  ><i title="Table view" class="fa fa-table"></i></a>    
      <a href="?view=wall" <% if params[:view] == 'wall' %>class="active"<% end %>><i title="Wall view" class="fa fa-th-large"></i></a>
      <% if @membership.admin? %>
        <a href="?view=emails" <% if params[:view] == 'emails' %>class="active"<% end %>><i title="Emails" class="fa fa-envelope"></i></a>
      <% end %>
    </div>

  <% end %>


  <% if @membership.admin? %>
    &middot;

    <script>
      $(function () {
        var accounts = <%=(current_account.network.where(:id.nin => @group.members.pluck(:id))).map { |account| {:name => account.name, :email => account.email} }.to_json%>
        $('#add-member input[name=name]').typeahead({
          source: accounts,
          afterSelect: function (selected) {
            $('#add-member input[name=email]').val(selected.email)
          }
        });
      })
    </script>
    <a class="btn btn-primary" href="javascript:;" onclick="$(this).hide().next().css('display', 'inline').find('input[name=name]').focus()"><i class="fa fa-plus-circle"></i> Add member</a>
    <% form_tag "/h/#{@group.slug}/add_member", :style => 'display:none', :id => 'add-member', :class => 'form-inline' do %>
      <%= text_field_tag :name, :class => 'form-control', :placeholder => 'Name', :autocomplete => 'off' %>
      <%= email_field_tag :email, :class => 'form-control', :placeholder => 'Email' %>
      <%= submit_tag 'Add member', :class => 'btn btn-primary' %>
    <% end %>
  <% end %>  

</div>


<% if params[:view] == 'wall' %>

  <div style="margin-top: 15px">
    <% (Account.where(:id.in => @memberships.pluck(:account_id)).where(:picture_uid.ne => nil).shuffle + Account.where(:id.in => @memberships.pluck(:account_id)).where(:picture_uid => nil).shuffle).each { |account| %><img style="width: 149px; margin-bottom: 5px; margin-right: 5px;" data-toggle="tooltip" title="<%=account.name%>" src="<%=account.picture ? account.picture.thumb('400x400#').url : '/images/silhouette.png'%>" /><% } %>      
  </div>

<% elsif params[:view] == 'emails' %>

  <pre style="margin-top: 15px;"><%= Account.where(:id.in => @memberships.pluck(:account_id)).map do |account| "#{account.name} &lt;#{account.email}&gt;" end.join(', ') %></pre>


<% else @memberships = @memberships.page(params[:page]) %>


  <table class="table table-striped">
    <thead>
      <tr>
        <th style="width: 1px">Name</th>      
        <th>Proposed by</th>
        <th>Accepted at</th>
        <% if @membership.admin? and @group.facebook_group %>
          <th>Added to Facebook group?</th>
        <% end %>         
        <% if @group.democratic_threshold %>
          <th>Suggested magic number</th>
        <% end %>        
        <th>Tier</th>
        <th>Accommodation</th>
        <th>Transport</th>
        <th>Requested contribution</th>
        <th>Paid</th>     
        <th>Booking limit</th>     
        <% if @membership.admin %>
          <th></th>
        <% end %>           
      </tr>
    </thead>
    <% @memberships.each { |membership| account = membership.account %>
      <tr>
        <td>
          <%= partial :account, :object => account, :locals => {:membership => membership} %>
          <div>
            <% membership.teamships.each { |teamship| %>
              <a href="/h/<%=@group.slug%>/teams"><span class="label label-primary"><%=teamship.team.name%></span></a>
            <% } %>        
          </div>
        </td>
        <td>
          <%= membership.mapplication ? membership.mapplication.verdicts.proposers.map { |verdict| verdict.account.name }.to_sentence : '' %>
        </td>        
        <td>
          <%= membership.created_at %>          
          <% if membership.mapplication; mapplication = membership.mapplication %>
            <br />
            <%=pluralize(mapplication.verdicts.supporters.count,'supporter') %>

            <% if mapplication.answers %>
              <div>
                <a href="javascript:;" onclick="$('#modal .modal-content').load('/mapplications/<%=mapplication.id%>', function () {
                              $('#modal').modal('show')
                            });">
                  <i class="fa fa-file-text-o" style="font-size: 20px"></i>
                </a>
              </div>
            <% end %>
          <% end %>          
        </td>
        <% if @membership.admin? and @group.facebook_group %>
          <td>
            <div data-pagelet-url="/memberships/<%=membership.id%>/added_to_facebook_group">
              <%= partial :added_to_facebook_group, :locals => {:membership => membership} %>
            </div>
          </td>      
        <% end %> 
        <% if @group.democratic_threshold %>
          <td><%=membership.desired_threshold%></td>
        <% end %>        
        <td>        
          <% if @membership.admin? %>
            <div data-pagelet-url="/memberships/<%=membership.id%>/tier">
              <%= partial :tier, :locals => {:membership => membership} %>
            </div>
          <% else %>
            <% if tiership = membership.tiership %>
              <span class="label label-primary"><%= tiership.tier.name %> (£<%= tiership.tier.cost %>)</span>
            <% else %>          
              <i class="fa fa-warning"></i>
            <% end %>   
          <% end %>                       
        </td>
        <td>       
          <% if @membership.admin? %>
            <div data-pagelet-url="/memberships/<%=membership.id%>/accom">
              <%= partial :accom, :locals => {:membership => membership} %>
            </div>
          <% else %>
            <% if accomship = membership.accomship %>
              <span class="label label-primary"><%= accomship.accom.name %> (£<%= accomship.accom.cost_per_person %>)</span>
            <% else %>          
              <i class="fa fa-warning"></i>
            <% end %>
          <% end %>           
        </td>    
        <td>
          <% membership.transportships.each { |transportship| %>
            <span class="label label-primary"><%= transportship.transport.name %> (£<%= transportship.transport.cost %>)</span> <br />
          <% } %>
        </td>      
        <td>
          <% if membership.contribution > 0 %>
            £<%= membership.contribution %>
          <% end %>
        </td>
        <td>
          <% if @membership.admin? %>
            <div data-pagelet-url="/memberships/<%=membership.id%>/paid">
              <%= partial :paid, :locals => {:membership => membership} %>
            </div>
          <% else %>
            <%= "£#{membership.paid}" if membership.paid %>
          <% end %>
        </td>        
        <% if @group.enable_bookings %>
          <td>
            <% if @membership.admin? %>
              <div data-pagelet-url="/memberships/<%=membership.id%>/booking_limit">
                <%= partial :booking_limit, :locals => {:membership => membership} %>
              </div>
            <% else %>
              <%= membership.booking_limit if membership.booking_limit %>
            <% end %>
          </td>          
        <% end %>        
        <% if @membership.admin? %>
          <td style="font-size: 13px">
            <% y = [] %>
            <% if membership.admin %>
              <% y << capture do %>            
                <a href="/memberships/<%=membership.id%>/unadmin">Unadmin</a>
              <% end %>
            <% else %>
              <% y << capture do %>            
                <a href="/memberships/<%=membership.id%>/make_admin">Make admin</a>
              <% end %>
            <% end %>
            <% y << capture do %>            
              <a data-confirm="Are you sure you want to remove this person from the group?" href="/memberships/<%=membership.id%>/remove">Remove</a>
            <% end %>
            <%= y.map(&:strip).join(' &middot; ') %>
          </td>
        <% end %>
      </tr>
    <% } %>
    <tr>
      <th></th>      
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <% if @group.democratic_threshold %>
        <th></th>
      <% end %>              
      <% if @membership.admin? and @group.facebook_group %>
        <th></th>
      <% end %>        
      <th>£<%= @group.memberships.pluck(:paid).compact.sum %></th>
      <% if @membership.admin %>
        <th></th>
      <% end %>        
    </tr>
  </table>

  <div style="text-align: center">
    <%= will_paginate @memberships, :renderer => WillPaginate::ViewHelpers::BootstrapRenderer %>
  </div>

<% end %>