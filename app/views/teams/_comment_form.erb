<script>
	$(function() {
		$('#comment_body').parent().attr('class','col-md-12')
		$('#comment-form .btn-primary').parent().attr('class','col-md-12')
	})
</script>

 <% form_for @comment, @comment.new_record ? "/h/#{@group.slug}/teams/#{@team.id}/comment" : "/comments/#{@comment.id}/edit", :id => 'comment-form', :class => 'form-horizontal placeholders-only' do |f| %>
  <%= f.wysiwyg_block :body %>
  <%= f.submit_block button_text: 'Submit', destroy_url: "/comments/#{@comment.id}/destroy" %>
<% end %> 
