
<%= partial :group, :object => @group  %>

<% if @membership %>
  <%= ul_nav 'nav nav-pills', [
    ["Members (#{@group.memberships.count})", "/h/#{@group.slug}"],
    ["Applications (#{@group.mapplications.pending.count})", "/h/#{@group.slug}/applications"],      
    (["Teams (#{@group.teams.count})", "/h/#{@group.slug}/teams"] if @group.teams.count > 0),
    (["Rotas (#{@group.rotas.count})", "/h/#{@group.slug}/rotas"] if @group.rotas.count > 0),
    (["Facebook group", @group.facebook_group] if @group.facebook_group)
    ] %>

<% end %>
