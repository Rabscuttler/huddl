
<%= partial :group_header %>

<p>
  You've used <%=@membership.bookings.count%> of <%=pluralize(@membership.booking_limit,'day') %>
</p>

<% (Date.civil(Date.today.year,1,1)..Date.civil(Date.today.year,12,31)).each { |date| %>
  <%= date %>
  <% if @membership.bookings.count < @membership.booking_limit and !@membership.bookings.find_by(date: date) %>
    &middot; <a href="/h/<%=@group.slug%>/book?date=<%=date.to_s(:db)%>">Book</a><br />
  <% end %>

  <ul>
    <% @group.bookings.where(:date => date).each { |booking| %>
      <li>
        <% if (booking.account == current_account) or @membership.admin? %>
          <a data-confirm="Remove this person from this booking?" href="/bookings/<%=booking.id%>/destroy">
            <%=booking.account.name%>
          </a>
        <% else %>        
          <%=booking.account.name%>
        <% end %>
      </li>
    <% } %>
  </ul>

<% }  %>