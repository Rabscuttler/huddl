
<%= partial :gathering_header %>

<h2>Apply now</h2>

<% form_for @account, "/gatherings/#{@gathering.slug}/apply", :class => 'form-horizontal' do |f| %>

  <% if !current_account %>
    <%= f.text_block :name %>
    <%= f.image_block :picture %>
    <%= f.text_block :email %>
  <% end %>

  <% @gathering.request_questions_a.each { |q| %>
    <div class="form-group">
      <label class="control-label col-sm-3"><%=q%></label>
      <div class="col-sm-6">  
        <%= text_area_tag "answers[]", :class => 'form-control' %>
      </div>
    </div>  
  <% } %>

  <div class="form-group">
    <div class="col-sm-offset-3 col-sm-6">
      <button class="btn btn-primary"><i class="fa fa-bell"></i> Apply</button>
    </div>
  </div>            

<% end %>
