
<%= partial :group_header %>


<% if params[:applied] or (current_account and @mapplicaton = @group.mapplications.find_by(account: current_account)) %>

  <h2>Thanks for applying. Your application is under review</h2>

<% else %>

  <h2>Apply now</h2>

  <% form_for @account, "/h/#{@group.slug}/apply", :class => 'form-horizontal' do |f| %>

    <% if !current_account %>
      <%= f.text_block :name %>
      <%= f.text_block :email %>
      <%= f.image_block :picture %>
    <% end %>

    <% @group.request_questions_a.each { |q| %>
      <div class="form-group">
        <label class="control-label col-sm-3"><%=q%></label>
        <div class="col-sm-6">  
          <%= text_area_tag "answers[]", :class => 'form-control' %>
        </div>
      </div>  
    <% } %>

    <%= f.submit_block button_text: 'Submit application' %>            

  <% end %>

<% end %>