<% if activity.attendances.count > 0 %>
  <span><%=pluralize(activity.attendances.count,'person')%> interested</span>
<% end %>
<% if activity.attendances.find_by(account: current_account) %>
  <a class="pagelet-trigger" title="No longer interested" href="/activities/unattend?activity_id=<%=activity.id%>"><i class="fa fa-times"></i></a>    
<% else %>
  <a class="pagelet-trigger" title="Interested"  href="/activities/attend?activity_id=<%=activity.id%>"><i class="fa fa-thumbs-o-up"></i></a>
<% end %>
<% if activity.space_id %>      
  &middot;
  <a title="Unschedule" href="/activities/unschedule?activity_id=<%=activity.id%>"><i class="fa fa-calendar-minus-o"></i></a>
<% end %>